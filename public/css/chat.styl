@import "functions.styl"

#chat-interface
	border 1px solid #ccc
	border-top 0 none
	bottom 0
	right 20px
	position fixed
	width 250px

	&.closed

		.chat-users-list
			display none

		.chat-footer
			.show-chat-list
				display block

			.hide-chat-list
				display none

	.chat-users-list
		border-top 1px solid #CCC

		ul
			list-style none
			margin 0
			padding 5px

			li
				border 1px solid #FFF
				clear both
				cursor pointer
				padding 5px

				transition(background-color .2s ease)

				&:hover
					background-color #edf1f7
					border 1px solid #b5ccf2

				.chat-avatar
					border 1px solid #333

				.chat-status
					display block
					float right
					height 24px
					margin-left 15px
					margin-top 8px
					width 24px

					&.status-off
						color #968d8d

				.chat-user-name
					display block
					float right
					font-size 12px
					margin-top 8px
					overflow hidden
					text-overflow ellipsis
					white-space nowrap
					width 150px

	.chat-footer
		border-top 1px solid #CCC

		.show-chat-list
			back("chat/chat-person-icon.png", "nr", 9px 9px, #F4F6F6)
			border 0 none
			display none
			font-family arial, sans-serif
			font-size 15px
			height 32px
			padding 6px
			text-align left
			text-indent 24px
			width 212px

			.status
				display block
				height 7px
				left 19px
				position absolute
				top 19px
				width 7px

				&.on
					back("chat/chat-status-on.png", "nr", 0 0, transparent)

		.hide-chat-list
			back("chat/chat-hide.png", "nr", 135px 10px, #F4F6F6)
			border 0 none
			display block
			font-family arial, sans-serif
			font-size 15px
			height 32px
			padding 6px
			text-align left
			width 212px

		.options-chat-list
			back("chat/chat-config.png", "nr", 12px 11px, #F4F6F6)
			border 0 none
			border-left 1px solid #ccc
			color transparent
			height 32px
			width 35px

.chats-container
	bottom 3px
	height calc(48px + 12px)
	position fixed
	right 280px
	text-align right

	.chat-bubble
		border 2px solid #999
		border-radius 26px
		box-shadow 0 0 10px 0 rgba(0, 0, 0, 0.7)
		float right
		margin 5px
		overflow hidden

		img
			width 48px
